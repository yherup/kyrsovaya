        <TextBox x:Name="middleName" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Margin="148,163,0,0"/>
        <TextBox x:Name="lastName" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Margin="148,91,0,0"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Margin="148,24,0,0"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="173" Margin="627,258,0,0"/>
        <TextBox x:Name="Adress" HorizontalAlignment="Left" Height="26" Margin="545,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" Visibility="Hidden"/>
        <Label x:Name="L_adress" Content="Адрес
               " HorizontalAlignment="Left" Margin="478,206,0,0" VerticalAlignment="Top" Width="62" FontSize="16" Visibility="Hidden"/>

    </Grid>
</Window>
