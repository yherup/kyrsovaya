        xmlns:local="clr-namespace:kyrsRabotaManagment"
        mc:Ignorable="d"
        Title="Registration" Height="445.424" Width="877.796">
    <Grid Margin="0,0,2,0">
        <Label Content="Имя" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,24,0,0" Height="39" Width="48" FontSize="16"/>
