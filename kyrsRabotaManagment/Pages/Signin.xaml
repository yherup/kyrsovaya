<Page x:Class="kyrsRabotaManagment.Pages.Signin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kyrsRabotaManagment.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход">

    <Grid>
        <Button x:Name="Signin1" Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98"  Height="29" Click="Signin_Click" Margin="90,190,0,0"/>
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" Margin="87,22,0,0"/>
        <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,20,0,0" Width="66" Height="38"/>
        <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,85,0,0" Height="38" Width="66"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="87,87,0,0" VerticalAlignment="Top" Height="34" Width="274"/>
        <Button x:Name="Back" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="241,190,0,0" VerticalAlignment="Top" Width="145" Height="29" Click="Back_Click"/>


    </Grid>
</Page>
